@model Pie

<div class="col-sm-4 col-lg-4 col-md-4">

    <div class="thumbnail">

        <!--Displays the thumbnail, name, price and a short description-->
        <img src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Pie"
                   asp-action="Details"
                   asp-route-id="@Model.PieId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>

        <!--A button to add the pie to the cart-->
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.PieId">Add to cart</a>
            </p>
        </div>

    </div>

</div>